%form.small(name="buildForm" ng-submit="buildLevel()" novalidate)
  %select(id="config_file" name="config_file" ng-model="level.config_file" ng-options="config_file for config_file in panelCtrl.config_files" required)
  %button.btn.btn-right.btn-primary.spinner(type="submit" ng-disabled="cannotSubmit(buildForm)")
    %i.fa(ng-class="buttonIcon('fa-cube', 'build')")
    Build
